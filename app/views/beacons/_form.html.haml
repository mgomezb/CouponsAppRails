= form_for @beacon do |f|
  - if @beacon.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beacon.errors.count, "error")} prohibited this beacon from being saved:"
      %ul
        - @beacon.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :major
    = f.number_field :major
  .field
    = f.label :minor
    = f.number_field :minor
  .field
    = f.label :proximity_uuid
    = f.text_field :proximity_uuid
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :local
    = f.text_field :local
  .actions
    = f.submit 'Save'
