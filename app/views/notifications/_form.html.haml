= form_for @notification do |f|
  - if @notification.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notification.errors.count, "error")} prohibited this notification from being saved:"
      %ul
        - @notification.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :init_date
    = f.text_field :init_date
  .field
    = f.label :end_date
    = f.text_field :end_date
  .field
    = f.label :proximity_trigger_range
    = f.text_field :proximity_trigger_range
  .field
    = f.label :store
    = f.text_field :store
  .field
    = f.label :beacon
    = f.text_field :beacon
  .actions
    = f.submit 'Save'
