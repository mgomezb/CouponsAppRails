= simple_form_for [@local, @store] do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name
  .actions
    = f.button :submit, 'Crear Tienda', class: 'btn btn-success'